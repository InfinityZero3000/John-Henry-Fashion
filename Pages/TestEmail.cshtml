@page
@model JohnHenryFashionWeb.Pages.TestEmailModel
@{
    ViewData["Title"] = "Test Email Configuration";
    Layout = "_Layout";
}

<div class="container my-5">
    <h2 class="mb-4">ðŸ”§ Email Configuration Test</h2>
    
    @if (Model.TestResult != null)
    {
        <div class="alert @(Model.TestResult.Success ? "alert-success" : "alert-danger") alert-dismissible fade show mb-4" role="alert">
            <i class="bi @(Model.TestResult.Success ? "bi-check-circle-fill" : "bi-x-circle-fill")"></i>
            @Model.TestResult.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-gear-fill"></i> Current SMTP Configuration</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>SMTP Server:</strong> @Model.SmtpServer</p>
                    <p><strong>Port:</strong> @Model.SmtpPort</p>
                    <p><strong>Use SSL:</strong> @(Model.UseSsl ? "Yes" : "No")</p>
                </div>
                <div class="col-md-6">
                    <p><strong>From Email:</strong> @Model.FromEmail</p>
                    <p><strong>From Name:</strong> @Model.FromName</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-envelope-fill"></i> Send Test Email</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label for="testEmail" class="form-label">Recipient Email Address</label>
                    <input type="email" class="form-control" id="testEmail" name="testEmail" 
                           placeholder="Enter email address to receive test email" 
                           value="@Model.TestEmail" required>
                    <div class="form-text">The email address where you want to receive the test email.</div>
                </div>

                <div class="mb-3">
                    <label for="templateType" class="form-label">Email Template</label>
                    <select class="form-select" id="templateType" name="templateType" required>
                        <option value="simple">Simple Test Email</option>
                        <option value="order">Order Confirmation Template</option>
                        <option value="contact">Contact Confirmation Template</option>
                    </select>
                    <div class="form-text">Choose which email template to test.</div>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="bi bi-send-fill"></i> Send Test Email
                </button>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-warning">
            <h5 class="mb-0"><i class="bi bi-lightbulb-fill"></i> Troubleshooting Tips</h5>
        </div>
        <div class="card-body">
            <ul class="mb-0">
                <li><strong>Check spam folder:</strong> Test emails might be filtered as spam</li>
                <li><strong>Gmail users:</strong> Make sure you're using an App Password, not your regular password</li>
                <li><strong>2-Factor Authentication:</strong> Must be enabled on Gmail to use App Passwords</li>
                <li><strong>Check logs:</strong> Look at the application logs for detailed error messages</li>
                <li><strong>Firewall:</strong> Ensure port @Model.SmtpPort is not blocked by firewall</li>
                <li><strong>Email provider limits:</strong> Some providers have rate limits or require verification</li>
            </ul>
        </div>
    </div>
</div>
