@model JohnHenryFashionWeb.ViewModels.UserNotificationsViewModel

@{
    ViewData["Title"] = "Thông báo";
    ViewData["CurrentSection"] = "notifications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        @await Html.PartialAsync("_UserSidebar")
        
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i data-lucide="bell" class="me-2"></i>
                        Thông báo
                    </h4>
                </div>
                
                <div class="card-body">
                    <div id="notifications-loading" class="text-center py-4">
                        <div class="spinner-border text-primary"></div>
                        <p class="mt-2">Đang tải thông báo...</p>
                    </div>
                    
                    <div id="notifications-empty" class="text-center py-5 d-none">
                        <i data-lucide="bell-off" style="width: 64px; height: 64px;"></i>
                        <h4>Không có thông báo</h4>
                    </div>
                    
                    <div id="notifications-list" class="d-none"></div>
                </div>
            </div>
        </main>
    </div>
</div>

<style>
.notification-item {
    padding: 1rem 1.25rem;
    margin-bottom: 0.5rem;
    border: 1px solid #dee2e6;
    border-radius: 8px;
    background: white;
    cursor: pointer;
    transition: all 0.2s;
}
.notification-item:hover {
    background: #f8f9fa;
    border-color: #0d6efd;
}
.notification-item.unread {
    background: #e7f1ff;
    border-left: 3px solid #0d6efd;
}
.notification-title {
    font-weight: 600;
    font-size: 1rem;
    margin-bottom: 0.375rem;
    color: #212529;
}
.notification-message {
    font-size: 0.9375rem;
    color: #6c757d;
    margin-bottom: 0;
}
.notification-time {
    font-size: 0.8125rem;
    color: #868e96;
    white-space: nowrap;
}
</style>

@section Scripts {
<script>
(function() {
    'use strict';
    
    // Wait for DOM ready
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', init);
    } else {
        init();
    }
    
    function init() {
        console.log('Notifications page initialized');
        loadNotifications();
    }
    
    function loadNotifications() {
        console.log('Loading notifications...');
        
        var xhr = new XMLHttpRequest();
        xhr.open('GET', '/api/notifications', true);
        xhr.setRequestHeader('Content-Type', 'application/json');
        
        xhr.onload = function() {
            console.log('Response status:', xhr.status);
            
            if (xhr.status === 200) {
                try {
                    var response = JSON.parse(xhr.responseText);
                    console.log('Response data:', response);
                    
                    hideLoading();
                    
                    if (response.success && response.data && response.data.length > 0) {
                        renderNotifications(response.data);
                    } else {
                        showEmpty();
                    }
                } catch (e) {
                    console.error('JSON parse error:', e);
                    hideLoading();
                    showEmpty();
                }
            } else {
                console.error('Request failed:', xhr.status);
                hideLoading();
                showEmpty();
            }
        };
        
        xhr.onerror = function() {
            console.error('Network error');
            hideLoading();
            showEmpty();
        };
        
        xhr.send();
    }
    
    function hideLoading() {
        var el = document.getElementById('notifications-loading');
        if (el) el.classList.add('d-none');
    }
    
    function showEmpty() {
        var el = document.getElementById('notifications-empty');
        if (el) el.classList.remove('d-none');
    }
    
    function renderNotifications(notifications) {
        console.log('Rendering', notifications.length, 'notifications');
        
        var listEl = document.getElementById('notifications-list');
        var emptyEl = document.getElementById('notifications-empty');
        
        if (!listEl) {
            console.error('List element not found');
            return;
        }
        
        if (emptyEl) emptyEl.classList.add('d-none');
        listEl.classList.remove('d-none');
        
        var html = '';
        for (var i = 0; i < notifications.length; i++) {
            var n = notifications[i];
            var unreadClass = n.isRead ? '' : 'unread';
            var title = escapeHtml(n.title || 'Thông báo');
            var message = escapeHtml(n.message || '');
            var time = formatDate(n.createdAt);
            var url = n.actionUrl || '#';
            
            html += '<a href="' + url + '" class="notification-item d-block text-decoration-none ' + unreadClass + '">';
            html += '  <div class="d-flex align-items-start justify-content-between">';
            html += '    <div class="d-flex align-items-start flex-grow-1">';
            html += '      <div class="me-3">';
            html += '        <i data-lucide="bell" style="width: 22px; height: 22px; color: #0d6efd;"></i>';
            html += '      </div>';
            html += '      <div class="flex-grow-1">';
            html += '        <h6 class="notification-title">' + title + '</h6>';
            html += '        <p class="notification-message">' + message + '</p>';
            html += '      </div>';
            html += '    </div>';
            html += '    <div class="ms-3">';
            html += '      <small class="notification-time">' + time + '</small>';
            html += '    </div>';
            html += '  </div>';
            html += '</a>';
        }
        
        listEl.innerHTML = html;
        console.log('Rendered', listEl.children.length, 'items');
        
        // Refresh Lucide icons
        if (typeof lucide !== 'undefined' && lucide.createIcons) {
            lucide.createIcons();
        }
    }
    
    function escapeHtml(text) {
        if (!text) return '';
        var div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }
    
    function formatDate(dateStr) {
        if (!dateStr) return '';
        try {
            var d = new Date(dateStr);
            var day = ('0' + d.getDate()).slice(-2);
            var month = ('0' + (d.getMonth() + 1)).slice(-2);
            var year = d.getFullYear();
            var hours = ('0' + d.getHours()).slice(-2);
            var mins = ('0' + d.getMinutes()).slice(-2);
            return day + '/' + month + '/' + year + ' ' + hours + ':' + mins;
        } catch (e) {
            return dateStr;
        }
    }
})();
</script>
}
