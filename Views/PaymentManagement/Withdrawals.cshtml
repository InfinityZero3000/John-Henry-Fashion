@model List<JohnHenryFashionWeb.Models.WithdrawalRequest>
@{
    ViewData["Title"] = "Yêu cầu Rút tiền";
    ViewData["CurrentSection"] = "PaymentManagement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Breadcrumb"] = "<li class=\"breadcrumb-item\"><a href=\"/admin/payments\">Quản lý thanh toán</a></li><li class=\"breadcrumb-item active\">Rút tiền</li>";
    
    var stats = ViewBag.Statistics;
    var statusFilter = ViewBag.StatusFilter as string;
}

<style>
    .pending-highlight {
        background-color: #fffbeb !important;
    }
</style>

<div class="admin-content">
    <!-- Page Header -->
    <div class="admin-page-header">
        <div class="admin-flex-between">
            <div>
                <h1 class="admin-page-title">
                    <i data-lucide="banknote"></i>
                    Yêu cầu Rút tiền
                </h1>
                <p style="color: #6b7280; margin-top: 0.5rem;">Quản lý và phê duyệt yêu cầu rút tiền của Seller</p>
            </div>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="admin-alert admin-alert-success">
            <i data-lucide="check-circle"></i>
            <span>@TempData["SuccessMessage"]</span>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="admin-alert admin-alert-danger">
            <i data-lucide="alert-circle"></i>
            <span>@TempData["ErrorMessage"]</span>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="admin-stats-grid">
        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Chờ duyệt</h3>
                    <p class="value">@stats.PendingAmount.ToString("N0") ₫</p>
                    <p class="change">@stats.PendingCount yêu cầu</p>
                </div>
                <div class="admin-stat-card-icon warning">
                    <i data-lucide="clock"></i>
                </div>
            </div>
        </div>

        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Đã phê duyệt</h3>
                    <p class="value">@stats.ApprovedAmount.ToString("N0") ₫</p>
                    <p class="change">@stats.ApprovedCount yêu cầu</p>
                </div>
                <div class="admin-stat-card-icon success">
                    <i data-lucide="check-circle"></i>
                </div>
            </div>
        </div>

        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Từ chối</h3>
                    <p class="value">@stats.RejectedCount</p>
                    <p class="change">Yêu cầu bị từ chối</p>
                </div>
                <div class="admin-stat-card-icon danger">
                    <i data-lucide="x-circle"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="admin-card admin-mb-lg">
        <div class="admin-card-header">
            <h3>Lọc yêu cầu</h3>
        </div>
        <div class="admin-card-body">
            <form method="get" asp-action="Withdrawals" class="admin-flex admin-gap-sm" style="flex-wrap: wrap;">
                <div class="admin-form-group" style="margin: 0; flex: 1; min-width: 200px;">
                    <label class="admin-form-label">Trạng thái</label>
                    <select name="status" class="admin-form-control">
                        <option value="">Tất cả</option>
                        <option value="Pending" selected="@(statusFilter == "Pending")">Chờ duyệt</option>
                        <option value="Approved" selected="@(statusFilter == "Approved")">Đã duyệt</option>
                        <option value="Rejected" selected="@(statusFilter == "Rejected")">Từ chối</option>
                        <option value="Completed" selected="@(statusFilter == "Completed")">Hoàn thành</option>
                    </select>
                </div>
                <div style="display: flex; align-items: flex-end;">
                    <button type="submit" class="admin-btn admin-btn-primary">
                        <i data-lucide="search"></i>
                        Lọc
                    </button>
                </div>
                @if (!string.IsNullOrEmpty(statusFilter))
                {
                    <div style="display: flex; align-items: flex-end;">
                        <a href="/admin/payments/withdrawals" class="admin-btn admin-btn-secondary">
                            <i data-lucide="x"></i>
                            Xóa lọc
                        </a>
                    </div>
                }
            </form>
        </div>
    </div>

    <!-- Withdrawals Table -->
    <div class="admin-card">
        <div class="admin-card-header admin-flex-between">
            <h3>Danh sách yêu cầu rút tiền</h3>
            @if (Model.Any())
            {
                <span class="admin-badge admin-badge-primary">@Model.Count yêu cầu</span>
            }
        </div>
        <div class="admin-card-body" style="padding: 0;">
            <div class="admin-table-container">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Mã YC</th>
                            <th>Ngày YC</th>
                            <th>Seller</th>
                            <th>Số Tiền</th>
                            <th>Ngân Hàng</th>
                            <th>Số TK</th>
                            <th>Trạng Thái</th>
                            <th>Người Xử Lý</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var withdrawal in Model)
                            {
                                var rowClass = withdrawal.Status == "Pending" ? "pending-highlight" : "";
                                <tr class="@rowClass">
                                <td>
                                    <strong>@withdrawal.WithdrawalNumber</strong>
                                </td>
                                <td>@withdrawal.RequestedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (withdrawal.Seller != null)
                                    {
                                        <div>
                                            <strong>@withdrawal.Seller.Email</strong>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td><strong class="text-danger">@withdrawal.Amount.ToString("N0") ₫</strong></td>
                                <td>@withdrawal.BankName</td>
                                <td>@withdrawal.AccountNumber</td>
                                <td>
                                    @if (withdrawal.Status == "Pending")
                                    {
                                        <span class="admin-badge" style="background-color: #fef3c7; color: #92400e;">
                                            <i data-lucide="clock" style="width: 14px; height: 14px;"></i>
                                            Chờ duyệt
                                        </span>
                                    }
                                    else if (withdrawal.Status == "Approved")
                                    {
                                        <span class="admin-badge" style="background-color: #d1fae5; color: #065f46;">
                                            <i data-lucide="check" style="width: 14px; height: 14px;"></i>
                                            Đã duyệt
                                        </span>
                                        @if (withdrawal.ProcessedAt.HasValue)
                                        {
                                            <div style="font-size: 0.75rem; color: #6b7280; margin-top: 0.25rem;">
                                                @withdrawal.ProcessedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                            </div>
                                        }
                                    }
                                    else if (withdrawal.Status == "Rejected")
                                    {
                                        <span class="admin-badge" style="background-color: #fee2e2; color: #991b1b;">
                                            <i data-lucide="x" style="width: 14px; height: 14px;"></i>
                                            Từ chối
                                        </span>
                                    }
                                    else if (withdrawal.Status == "Completed")
                                    {
                                        <span class="admin-badge" style="background-color: #d1fae5; color: #065f46;">
                                            <i data-lucide="check-circle" style="width: 14px; height: 14px;"></i>
                                            Hoàn thành
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(withdrawal.ProcessedBy))
                                    {
                                        <span class="admin-badge" style="background-color: #dbeafe; color: #1e40af;">@withdrawal.ProcessedBy</span>
                                    }
                                    else
                                    {
                                        <span style="color: #9ca3af;">-</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="WithdrawalDetails" asp-route-id="@withdrawal.Id" class="admin-btn admin-btn-sm admin-btn-primary">
                                        <i data-lucide="eye"></i>
                                        Chi tiết
                                    </a>
                                    @if (withdrawal.Status == "Pending")
                                    {
                                        <button type="button" class="admin-btn admin-btn-sm admin-btn-success"
                                                onclick="openApproveModal('@withdrawal.Id', '@withdrawal.WithdrawalNumber', '@withdrawal.Amount.ToString("N0")', '@withdrawal.Seller?.Email')">
                                            <i data-lucide="check"></i>
                                            Duyệt
                                        </button>
                                        <button type="button" class="admin-btn admin-btn-sm admin-btn-danger"
                                                onclick="openRejectModal('@withdrawal.Id', '@withdrawal.WithdrawalNumber')">
                                            <i data-lucide="x"></i>
                                            Từ chối
                                        </button>
                                    }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" style="padding: 4rem 2rem; text-align: center; color: #9ca3af;">
                                    <i data-lucide="inbox" style="width: 48px; height: 48px; margin: 0 auto 1rem; color: #d1d5db;"></i>
                                    <p style="font-size: 1rem; margin: 0;">Không có yêu cầu rút tiền nào</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Approve Modal -->
<div class="admin-modal" id="approveModal" style="display: none;">
    <div class="admin-modal-backdrop" onclick="closeApproveModal()"></div>
    <div class="admin-modal-content" style="max-width: 500px;">
        <div class="admin-modal-header">
            <h3>Phê duyệt Rút tiền</h3>
            <button type="button" class="admin-modal-close" onclick="closeApproveModal()">
                <i data-lucide="x"></i>
            </button>
        </div>
        <form id="approveForm" method="post" asp-action="ApproveWithdrawal">
            <div class="admin-modal-body">
                <input type="hidden" id="approveId" name="id" />
                
                <div class="admin-alert admin-alert-success" style="margin-bottom: 1.25rem;">
                    <i data-lucide="info"></i>
                    <span>Phê duyệt yêu cầu rút tiền <strong id="approveNumber"></strong></span>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1.25rem;">
                    <div>
                        <p style="color: #6b7280; margin-bottom: 0.25rem; font-size: 0.875rem;">Seller:</p>
                        <strong id="approveSeller"></strong>
                    </div>
                    <div>
                        <p style="color: #6b7280; margin-bottom: 0.25rem; font-size: 0.875rem;">Số tiền:</p>
                        <h4 style="color: #dc2626; margin: 0;" id="approveAmount"></h4>
                    </div>
                </div>

                <div class="admin-form-group">
                    <label class="admin-form-label">Ghi chú</label>
                    <textarea name="notes" class="admin-form-control" rows="3" placeholder="Nhập ghi chú (không bắt buộc)..."></textarea>
                </div>

                <div class="admin-alert admin-alert-warning">
                    <i data-lucide="alert-triangle"></i>
                    <span>Sau khi phê duyệt, bạn cần thực hiện chuyển khoản cho Seller và cập nhật trạng thái sau đó.</span>
                </div>
            </div>
            <div class="admin-modal-footer">
                <button type="button" class="admin-btn admin-btn-secondary" onclick="closeApproveModal()">
                    <i data-lucide="x"></i>
                    Hủy
                </button>
                <button type="submit" class="admin-btn admin-btn-success">
                    <i data-lucide="check"></i>
                    Phê duyệt
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Reject Modal -->
<div class="admin-modal" id="rejectModal" style="display: none;">
    <div class="admin-modal-backdrop" onclick="closeRejectModal()"></div>
    <div class="admin-modal-content" style="max-width: 500px;">
        <div class="admin-modal-header">
            <h3>Từ chối Rút tiền</h3>
            <button type="button" class="admin-modal-close" onclick="closeRejectModal()">
                <i data-lucide="x"></i>
            </button>
        </div>
        <form id="rejectForm" method="post" asp-action="RejectWithdrawal">
            <div class="admin-modal-body">
                <input type="hidden" id="rejectId" name="id" />
                
                <div class="admin-alert admin-alert-danger" style="margin-bottom: 1.25rem;">
                    <i data-lucide="alert-triangle"></i>
                    <span>Từ chối yêu cầu rút tiền <strong id="rejectNumber"></strong></span>
                </div>

                <div class="admin-form-group">
                    <label class="admin-form-label">Lý do từ chối <span style="color: #dc2626;">*</span></label>
                    <textarea name="reason" class="admin-form-control" rows="4" placeholder="Nhập lý do từ chối..." required></textarea>
                    <small style="color: #6b7280; display: block; margin-top: 0.375rem;">Lý do này sẽ được gửi cho Seller</small>
                </div>
            </div>
            <div class="admin-modal-footer">
                <button type="button" class="admin-btn admin-btn-secondary" onclick="closeRejectModal()">
                    <i data-lucide="x"></i>
                    Hủy
                </button>
                <button type="submit" class="admin-btn admin-btn-danger">
                    <i data-lucide="x"></i>
                    Từ chối
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-submit form on filter change
        $('select[name="status"]').on('change', function() {
            $(this).closest('form').submit();
        });

        // Handle approve modal
        function openApproveModal(id, number, amount, seller) {
            document.getElementById('approveId').value = id;
            document.getElementById('approveNumber').textContent = number;
            document.getElementById('approveAmount').textContent = amount + ' ₫';
            document.getElementById('approveSeller').textContent = seller;
            document.getElementById('approveModal').style.display = 'flex';
            setTimeout(() => {
                lucide.createIcons();
            }, 10);
        }

        function closeApproveModal() {
            document.getElementById('approveModal').style.display = 'none';
        }

        // Handle reject modal
        function openRejectModal(id, number) {
            document.getElementById('rejectId').value = id;
            document.getElementById('rejectNumber').textContent = number;
            document.getElementById('rejectModal').style.display = 'flex';
            setTimeout(() => {
                lucide.createIcons();
            }, 10);
        }

        function closeRejectModal() {
            document.getElementById('rejectModal').style.display = 'none';
        }

        // Close modals with ESC key
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeApproveModal();
                closeRejectModal();
            }
        });
    </script>
}
