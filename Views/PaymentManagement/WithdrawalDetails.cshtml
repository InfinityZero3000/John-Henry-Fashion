@model JohnHenryFashionWeb.Models.WithdrawalRequest
@{
    ViewData["Title"] = "Chi tiết Rút tiền";
    ViewData["CurrentSection"] = "PaymentManagement";
    ViewData["Breadcrumb"] = new List<(string Text, string Url)>
    {
        ("Quản lý Thanh toán", "/admin/payments"),
        ("Yêu cầu Rút tiền", "/admin/payments/withdrawals"),
        ("Chi tiết", "")
    };
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .info-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
        border-bottom: 1px solid #e5e7eb;
    }

    .info-row:last-child {
        border-bottom: none;
    }

    .info-label {
        font-weight: 600;
        color: #6b7280;
    }

    .info-value {
        color: #111827;
        font-weight: 500;
        text-align: right;
    }

    .amount-card {
        background: #fffbeb;
        border: 1px solid #fde68a;
        border-radius: var(--admin-border-radius);
        padding: 2rem;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .amount-card .label {
        color: #92400e;
        font-size: 0.875rem;
        margin-bottom: 0.5rem;
    }

    .amount-card .value {
        color: var(--jh-red);
        font-size: 2rem;
        font-weight: 700;
    }

    .timeline {
        position: relative;
        padding-left: 2rem;
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 2px;
        background: #e5e7eb;
    }

    .timeline-item {
        position: relative;
        padding-bottom: 1.5rem;
    }

    .timeline-item::before {
        content: '';
        position: absolute;
        left: -2.3rem;
        top: 0.5rem;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: var(--admin-primary);
    }
</style>

<div class="admin-content">
    <div class="admin-page-header">
        <div class="admin-page-header-content">
            <div>
                <h1>Chi tiết Yêu cầu Rút tiền</h1>
                <p>@Model.WithdrawalNumber</p>
            </div>
            <a asp-action="Withdrawals" class="admin-btn admin-btn-secondary">
                <i data-lucide="arrow-left"></i>
                Quay lại
            </a>
        </div>
    </div>

    <div style="display: grid; grid-template-columns: 1fr 400px; gap: 1.5rem; margin-top: 1.5rem;">
        <!-- Main Info -->
        <div>
            <div class="admin-card" style="margin-bottom: 1.5rem;">
                <div class="amount-card">
                    <div class="label">Số tiền rút</div>
                    <div class="value">@Model.Amount.ToString("N0") ₫</div>
                </div>

                <h3 style="margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.5rem;">
                    <i data-lucide="info" style="width: 20px; height: 20px;"></i>
                    Thông tin Yêu cầu
                </h3>

                <div class="info-row">
                    <span class="info-label">Mã yêu cầu:</span>
                    <span class="info-value">@Model.WithdrawalNumber</span>
                </div>

                <div class="info-row">
                    <span class="info-label">Ngày yêu cầu:</span>
                    <span class="info-value">@Model.RequestedAt.ToString("dd/MM/yyyy HH:mm:ss")</span>
                </div>

                <div class="info-row">
                    <span class="info-label">Seller:</span>
                    <span class="info-value">
                        @if (Model.Seller != null)
                        {
                            <strong>@Model.Seller.Email</strong>
                        }
                    </span>
                </div>

                <div class="info-row">
                    <span class="info-label">Trạng thái:</span>
                    <span class="info-value">
                        @if (Model.Status == "Pending")
                        {
                            <span class="admin-badge" style="background-color: #fef3c7; color: #92400e;">
                                <i data-lucide="clock" style="width: 14px; height: 14px;"></i>
                                Chờ duyệt
                            </span>
                        }
                        else if (Model.Status == "Approved")
                        {
                            <span class="admin-badge" style="background-color: #d1fae5; color: #065f46;">
                                <i data-lucide="check" style="width: 14px; height: 14px;"></i>
                                Đã duyệt
                            </span>
                        }
                        else if (Model.Status == "Rejected")
                        {
                            <span class="admin-badge" style="background-color: #fee2e2; color: #991b1b;">
                                <i data-lucide="x" style="width: 14px; height: 14px;"></i>
                                Từ chối
                            </span>
                        }
                        else if (Model.Status == "Completed")
                        {
                            <span class="admin-badge" style="background-color: #d1fae5; color: #065f46;">
                                <i data-lucide="check-circle" style="width: 14px; height: 14px;"></i>
                                Hoàn thành
                            </span>
                        }
                    </span>
                </div>

                @if (Model.ProcessedAt.HasValue)
                {
                    <div class="info-row">
                        <span class="info-label">Ngày xử lý:</span>
                        <span class="info-value">@Model.ProcessedAt.Value.ToString("dd/MM/yyyy HH:mm:ss")</span>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.ProcessedBy))
                {
                    <div class="info-row">
                        <span class="info-label">Người xử lý:</span>
                        <span class="info-value">
                            <span class="admin-badge" style="background-color: #dbeafe; color: #1e40af;">@Model.ProcessedBy</span>
                        </span>
                    </div>
                }
            </div>

            <!-- Bank Info -->
            <div class="admin-card" style="margin-bottom: 1.5rem;">
                <h3 style="margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.5rem;">
                    <i data-lucide="building" style="width: 20px; height: 20px;"></i>
                    Thông tin Ngân hàng
                </h3>

                <div class="info-row">
                    <span class="info-label">Ngân hàng:</span>
                    <span class="info-value"><strong>@Model.BankName</strong></span>
                </div>

                <div class="info-row">
                    <span class="info-label">Số tài khoản:</span>
                    <span class="info-value">
                        <code style="font-size: 1.1rem; color: var(--admin-primary); font-weight: 600;">@Model.AccountNumber</code>
                    </span>
                </div>

                <div class="info-row">
                    <span class="info-label">Chủ tài khoản:</span>
                    <span class="info-value">@Model.AccountName</span>
                </div>

                @if (!string.IsNullOrEmpty(Model.Branch))
                {
                    <div class="info-row">
                        <span class="info-label">Chi nhánh:</span>
                        <span class="info-value">@Model.Branch</span>
                    </div>
                }
            </div>

            <!-- Notes and Reason -->
            @if (!string.IsNullOrEmpty(Model.AdminNotes))
            {
                <div class="admin-card" style="margin-bottom: 1.5rem;">
                    <div class="admin-alert admin-alert-info">
                        <i data-lucide="sticky-note"></i>
                        <div>
                            <strong>Ghi chú của Admin</strong>
                            <p style="margin: 0.5rem 0 0 0;">@Model.AdminNotes</p>
                        </div>
                    </div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.RejectionReason))
            {
                <div class="admin-card">
                    <div class="admin-alert admin-alert-danger">
                        <i data-lucide="alert-triangle"></i>
                        <div>
                            <strong>Lý do từ chối</strong>
                            <p style="margin: 0.5rem 0 0 0;">@Model.RejectionReason</p>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar: Actions & Timeline -->
        <div>
            @if (Model.Status == "Pending")
            {
                <div class="admin-card" style="margin-bottom: 1.5rem;">
                    <h3 style="margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.5rem;">
                        <i data-lucide="check-square" style="width: 20px; height: 20px;"></i>
                        Xử lý Yêu cầu
                    </h3>

                    <!-- Approve Form -->
                    <form method="post" asp-action="ApproveWithdrawal" asp-route-id="@Model.Id" style="margin-bottom: 1rem;">
                        <div class="admin-form-group">
                            <label class="admin-form-label">Ghi chú</label>
                            <textarea name="notes" class="admin-form-control" rows="3" placeholder="Nhập ghi chú (không bắt buộc)..."></textarea>
                        </div>
                        <button type="submit" class="admin-btn admin-btn-success" style="width: 100%;" onclick="return confirm('Bạn có chắc chắn muốn phê duyệt yêu cầu này?');">
                            <i data-lucide="check"></i>
                            Phê duyệt
                        </button>
                    </form>

                    <div style="text-align: center; padding: 1rem 0; color: #9ca3af;">hoặc</div>

                    <!-- Reject Form -->
                    <form method="post" asp-action="RejectWithdrawal" asp-route-id="@Model.Id">
                        <div class="admin-form-group">
                            <label class="admin-form-label">Lý do từ chối <span style="color: #dc2626;">*</span></label>
                            <textarea name="reason" class="admin-form-control" rows="3" placeholder="Nhập lý do từ chối..." required></textarea>
                            <small style="color: #6b7280; display: block; margin-top: 0.375rem;">Lý do này sẽ được gửi cho Seller</small>
                        </div>
                        <button type="submit" class="admin-btn admin-btn-danger" style="width: 100%;" onclick="return confirm('Bạn có chắc chắn muốn từ chối yêu cầu này?');">
                            <i data-lucide="x"></i>
                            Từ chối
                        </button>
                    </form>
                </div>
            }

            <!-- Timeline -->
            <div class="admin-card">
                <h3 style="margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.5rem;">
                    <i data-lucide="history" style="width: 20px; height: 20px;"></i>
                    Lịch sử
                </h3>

                <div class="timeline">
                    <div class="timeline-item">
                        <div style="font-weight: 600;">Yêu cầu tạo</div>
                        <div style="font-size: 0.875rem; color: #6b7280;">@Model.RequestedAt.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>

                    @if (Model.ProcessedAt.HasValue)
                    {
                        <div class="timeline-item">
                            <div style="font-weight: 600;">
                                @if (Model.Status == "Approved")
                                {
                                    <span style="color: #16a34a;">Đã phê duyệt</span>
                                }
                                else if (Model.Status == "Rejected")
                                {
                                    <span style="color: #dc2626;">Bị từ chối</span>
                                }
                                else if (Model.Status == "Completed")
                                {
                                    <span style="color: #16a34a;">Hoàn thành</span>
                                }
                            </div>
                            <div style="font-size: 0.875rem; color: #6b7280;">@Model.ProcessedAt.Value.ToString("dd/MM/yyyy HH:mm")</div>
                            @if (!string.IsNullOrEmpty(Model.ProcessedBy))
                            {
                                <div style="font-size: 0.875rem;">Bởi: @Model.ProcessedBy</div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
