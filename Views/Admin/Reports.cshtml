@model JohnHenryFashionWeb.ViewModels.ReportsViewModel
@{
    ViewData["Title"] = "Báo cáo";
    ViewData["CurrentSection"] = "Reports";
    ViewData["PageIcon"] = "bar-chart-2";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <style>
        .admin-page-header {
            margin-bottom: 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }
        
        .admin-page-header-content h1.admin-page-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: #1f2937;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        
        .admin-page-description {
            font-size: 0.95rem;
            color: #6b7280;
            margin: 0.5rem 0 0 0;
        }
        
        .admin-page-header-actions {
            display: flex;
            gap: 0.75rem;
            align-items: center;
            flex-wrap: wrap;
        }
        
        .admin-stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }
        
        .admin-stat-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            border: 1px solid #e5e7eb;
            transition: all 0.3s ease;
            display: flex;
            gap: 1rem;
            align-items: flex-start;
        }
        
        .admin-stat-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        }
        
        .admin-stat-icon {
            width: 56px;
            height: 56px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }
        
        .admin-stat-icon i {
            width: 28px;
            height: 28px;
        }
        
        .admin-stat-content {
            flex: 1;
            min-width: 0;
        }
        
        .admin-stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: #1f2937;
            line-height: 1.2;
            margin-bottom: 0.25rem;
        }
        
        .admin-stat-label {
            font-size: 0.875rem;
            color: #6b7280;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }
        
        .admin-stat-change {
            font-size: 0.875rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
        }
        
        .admin-stat-change.positive {
            color: #10b981;
        }
        
        .admin-stat-change.negative {
            color: #ef4444;
        }
        
        .admin-stat-change.neutral {
            color: #6b7280;
        }
        
        .admin-stat-change i {
            width: 14px;
            height: 14px;
        }
        
        .admin-card {
            background: white;
            border-radius: 12px;
            border: 1px solid #e5e7eb;
            overflow: hidden;
        }
        
        .admin-card-header {
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid #e5e7eb;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .admin-card-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: #1f2937;
            margin: 0;
        }
        
        .admin-card-description {
            font-size: 0.875rem;
            color: #6b7280;
            margin: 0.25rem 0 0 0;
        }
        
        .admin-card-body {
            padding: 1.5rem;
        }
        
        .admin-icon-btn {
            background: transparent;
            border: none;
            padding: 0.5rem;
            cursor: pointer;
            color: #6b7280;
            border-radius: 8px;
            transition: all 0.2s ease;
        }
        
        .admin-icon-btn:hover {
            background: #f3f4f6;
            color: #1f2937;
        }
        
        .admin-link {
            color: #DC3545;
            font-size: 0.875rem;
            font-weight: 500;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            transition: color 0.2s ease;
        }
        
        .admin-link:hover {
            color: #b91c1c;
        }
        
        .admin-link i {
            width: 14px;
            height: 14px;
        }
        
        .admin-tabs {
            display: flex;
            gap: 0;
            border-bottom: none;
            margin: 0;
        }
        
        .admin-tab {
            background: transparent;
            border: none;
            padding: 1rem 1.5rem;
            font-weight: 500;
            color: #6b7280;
            cursor: pointer;
            border-bottom: 2px solid transparent;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9375rem;
        }
        
        .admin-tab:hover {
            color: #DC3545;
            background: rgba(220, 53, 69, 0.05);
        }
        
        .admin-tab.active {
            color: #DC3545;
            border-bottom-color: #DC3545;
        }
        
        .admin-tab i {
            width: 16px;
            height: 16px;
        }
        
        .admin-tab-content {
            display: none;
        }
        
        .admin-tab-content.active {
            display: block;
        }
        
        .admin-table-container {
            overflow-x: auto;
        }
        
        .admin-table {
            width: 100%;
            border-collapse: collapse;
        }
        
        .admin-table thead th {
            padding: 0.875rem 1rem;
            background: #f9fafb;
            font-weight: 600;
            font-size: 0.875rem;
            color: #6b7280;
            text-align: left;
            border-bottom: 2px solid #e5e7eb;
            white-space: nowrap;
        }
        
        .admin-table tbody td {
            padding: 1rem;
            border-bottom: 1px solid #e5e7eb;
            font-size: 0.875rem;
            color: #374151;
        }
        
        .admin-table tbody tr:hover {
            background: #f9fafb;
        }
        
        .admin-table tbody tr:last-child td {
            border-bottom: none;
        }
        
        .admin-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.8125rem;
            font-weight: 500;
        }
        
        .admin-badge-success {
            background: rgba(16, 185, 129, 0.1);
            color: #10b981;
        }
        
        .admin-badge-danger {
            background: rgba(239, 68, 68, 0.1);
            color: #ef4444;
        }
        
        .admin-badge-info {
            background: rgba(59, 130, 246, 0.1);
            color: #3b82f6;
        }
        
        .admin-badge i {
            width: 12px;
            height: 12px;
        }
        
        .admin-list {
            display: flex;
            flex-direction: column;
            gap: 0;
        }
        
        .admin-list-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 0;
            border-bottom: 1px solid #e5e7eb;
        }
        
        .admin-list-item:last-child {
            border-bottom: none;
        }
    </style>
}

<div class="admin-content">
    <!-- Page Header -->
    <div class="admin-page-header">
        <div class="admin-page-header-content">
            <h1 class="admin-page-title">
                <i data-lucide="bar-chart-2"></i>
                Báo cáo & Phân tích
            </h1>
        </div>
        <div class="admin-page-header-actions">
            <select class="admin-form-select" style="width: auto;" id="dateRangeSelect">
                <option value="today">Hôm nay</option>
                <option value="yesterday">Hôm qua</option>
                <option value="week" selected>7 ngày qua</option>
                <option value="month">30 ngày qua</option>
                <option value="quarter">3 tháng qua</option>
                <option value="year">Năm nay</option>
            </select>
            <button class="admin-btn admin-btn-success" onclick="exportReport('excel')">
                <i data-lucide="download"></i>
                Xuất Excel
            </button>
            <button class="admin-btn admin-btn-primary" onclick="scheduleReport()">
                <i data-lucide="clock"></i>
                Lập lịch
            </button>
        </div>
    </div>

    <!-- KPI Cards -->
    <div class="admin-stats-grid">
        <div class="admin-stat-card">
            <div class="admin-stat-icon" style="background: rgba(16, 185, 129, 0.1); color: #10b981;">
                <i data-lucide="dollar-sign"></i>
            </div>
            <div class="admin-stat-content">
                <div class="admin-stat-value">@Model.KPIData.TotalRevenue.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</div>
                <div class="admin-stat-label">Tổng doanh thu</div>
                <div class="admin-stat-change @(Model.KPIData.RevenueGrowth >= 0 ? "positive" : "negative")">
                    <i data-lucide="@(Model.KPIData.RevenueGrowth >= 0 ? "trending-up" : "trending-down")"></i>
                    @(Model.KPIData.RevenueGrowth >= 0 ? "+" : "")@Model.KPIData.RevenueGrowth.ToString("F1")%
                </div>
            </div>
        </div>

        <div class="admin-stat-card">
            <div class="admin-stat-icon" style="background: rgba(37, 99, 235, 0.1); color: #2563eb;">
                <i data-lucide="shopping-cart"></i>
            </div>
            <div class="admin-stat-content">
                <div class="admin-stat-value">@Model.KPIData.CompletedOrders</div>
                <div class="admin-stat-label">Tổng đơn hàng</div>
                <div class="admin-stat-change @(Model.KPIData.OrdersGrowth >= 0 ? "positive" : "negative")">
                    <i data-lucide="@(Model.KPIData.OrdersGrowth >= 0 ? "trending-up" : "trending-down")"></i>
                    @(Model.KPIData.OrdersGrowth >= 0 ? "+" : "")@Model.KPIData.OrdersGrowth.ToString("F1")%
                </div>
            </div>
        </div>

        <div class="admin-stat-card">
            <div class="admin-stat-icon" style="background: rgba(147, 51, 234, 0.1); color: #9333ea;">
                <i data-lucide="users"></i>
            </div>
            <div class="admin-stat-content">
                <div class="admin-stat-value">@Model.KPIData.NewCustomers</div>
                <div class="admin-stat-label">Khách hàng mới</div>
                <div class="admin-stat-change @(Model.KPIData.CustomersGrowth >= 0 ? "positive" : "negative")">
                    <i data-lucide="@(Model.KPIData.CustomersGrowth >= 0 ? "trending-up" : "trending-down")"></i>
                    @(Model.KPIData.CustomersGrowth >= 0 ? "+" : "")@Model.KPIData.CustomersGrowth.ToString("F1")%
                </div>
            </div>
        </div>

        <div class="admin-stat-card">
            <div class="admin-stat-icon" style="background: var(--jh-red-10); color: var(--jh-red);">
                <i data-lucide="trending-up"></i>
            </div>
            <div class="admin-stat-content">
                <div class="admin-stat-value">@Model.KPIData.ConversionRate.ToString("F1")%</div>
                <div class="admin-stat-label">Tỷ lệ chuyển đổi</div>
                <div class="admin-stat-change neutral">
                    <i data-lucide="minus"></i>
                    0%
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row g-3 mt-3">
        <!-- Revenue Chart -->
        <div class="col-lg-8">
            <div class="admin-card h-100">
                <div class="admin-card-header">
                    <div>
                        <h3 class="admin-card-title">Xu hướng doanh thu</h3>
                        <p class="admin-card-description">Biểu đồ doanh thu theo thời gian</p>
                    </div>
                    <button class="admin-icon-btn">
                        <i data-lucide="more-vertical"></i>
                    </button>
                </div>
                <div class="admin-card-body">
                    <div style="height: 300px;">
                        <canvas id="revenueChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Products -->
        <div class="col-lg-4">
            <div class="admin-card h-100">
                <div class="admin-card-header">
                    <div>
                        <h3 class="admin-card-title">Sản phẩm bán chạy</h3>
                        <p class="admin-card-description">Top 5 sản phẩm</p>
                    </div>
                    <a href="/admin/products" class="admin-link">
                        Xem tất cả
                        <i data-lucide="arrow-right"></i>
                    </a>
                </div>
                <div class="admin-card-body">
                    <div class="admin-list">
                        @if (Model.TopProductsData != null && Model.TopProductsData.Any())
                        {
                            @foreach (var product in Model.TopProductsData.Take(5))
                            {
                                <div class="admin-list-item">
                                    <div style="display: flex; align-items: center; gap: 0.75rem;">
                                        <div style="font-weight: 500; color: var(--admin-text-primary);">@product.Label</div>
                                    </div>
                                    <div style="text-align: right;">
                                        <div style="font-weight: 600; color: #DC3545;">@product.Value.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</div>
                                        <div style="font-size: 0.875rem; color: var(--admin-text-secondary);">@((int)product.Value) đã bán</div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div style="text-align: center; padding: 2rem; color: var(--admin-text-secondary);">
                                Chưa có dữ liệu
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Analytics Tabs -->
    <div class="admin-card mt-3">
        <div class="admin-card-header" style="border-bottom: 1px solid var(--admin-border); padding-bottom: 0;">
            <div class="admin-tabs" style="margin: 0;">
                <button class="admin-tab active" data-tab="sales" style="padding: 1rem 1.5rem; border-bottom: 2px solid transparent;">
                    <i data-lucide="shopping-bag"></i>
                    Bán hàng
                </button>
                <button class="admin-tab" data-tab="customers" style="padding: 1rem 1.5rem; border-bottom: 2px solid transparent;">
                    <i data-lucide="users"></i>
                    Khách hàng
                </button>
                <button class="admin-tab" data-tab="products" style="padding: 1rem 1.5rem; border-bottom: 2px solid transparent;">
                    <i data-lucide="package"></i>
                    Sản phẩm
                </button>
                <button class="admin-tab" data-tab="marketing" style="padding: 1rem 1.5rem; border-bottom: 2px solid transparent;">
                    <i data-lucide="megaphone"></i>
                    Marketing
                </button>
            </div>
        </div>
        <div class="admin-card-body" style="padding: 1.5rem;">
            <!-- Sales Analytics Tab -->
            <div class="admin-tab-content active" id="tab-sales">
                <div class="admin-table-container">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th style="width: 40%;">Chỉ số</th>
                                <th style="width: 30%; text-align: right;">Giá trị</th>
                                <th style="width: 30%; text-align: right;">Thay đổi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div style="display: flex; align-items: center; gap: 0.5rem;">
                                        <i data-lucide="dollar-sign" style="width: 16px; height: 16px; color: var(--admin-text-secondary);"></i>
                                        <span>Doanh thu</span>
                                    </div>
                                </td>
                                <td style="font-weight: 600; text-align: right;">@Model.SalesAnalytics.TotalRevenue.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                                <td style="text-align: right;">
                                    <span class="admin-badge admin-badge-@(Model.SalesAnalytics.GrowthRate >= 0 ? "success" : "danger")">
                                        <i data-lucide="@(Model.SalesAnalytics.GrowthRate >= 0 ? "trending-up" : "trending-down")" style="width: 12px; height: 12px;"></i>
                                        @(Model.SalesAnalytics.GrowthRate >= 0 ? "+" : "")@Model.SalesAnalytics.GrowthRate.ToString("F1")%
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div style="display: flex; align-items: center; gap: 0.5rem;">
                                        <i data-lucide="shopping-cart" style="width: 16px; height: 16px; color: var(--admin-text-secondary);"></i>
                                        <span>Đơn hàng</span>
                                    </div>
                                </td>
                                <td style="font-weight: 600; text-align: right;">@Model.SalesAnalytics.TotalOrders.ToString("N0")</td>
                                <td style="text-align: right;">
                                    <span class="admin-badge admin-badge-@(Model.SalesAnalytics.GrowthRate >= 0 ? "success" : "danger")">
                                        <i data-lucide="@(Model.SalesAnalytics.GrowthRate >= 0 ? "trending-up" : "trending-down")" style="width: 12px; height: 12px;"></i>
                                        @(Model.SalesAnalytics.GrowthRate >= 0 ? "+" : "")@Model.SalesAnalytics.GrowthRate.ToString("F1")%
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div style="display: flex; align-items: center; gap: 0.5rem;">
                                        <i data-lucide="trending-up" style="width: 16px; height: 16px; color: var(--admin-text-secondary);"></i>
                                        <span>Giá trị trung bình đơn hàng</span>
                                    </div>
                                </td>
                                <td style="font-weight: 600; text-align: right;">@Model.SalesAnalytics.AverageOrderValue.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                                <td style="text-align: right;">
                                    <span class="admin-badge admin-badge-info">
                                        <i data-lucide="minus" style="width: 12px; height: 12px;"></i>
                                        @((Model.SalesAnalytics.GrowthRate * 0.5m).ToString("F1"))%
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Customers Tab -->
            <div class="admin-tab-content" id="tab-customers">
                <div style="text-align: center; padding: 3rem; color: var(--admin-text-secondary);">
                    <i data-lucide="users" style="width: 48px; height: 48px; margin-bottom: 1rem; opacity: 0.5;"></i>
                    <p>Thống kê khách hàng sẽ hiển thị tại đây</p>
                </div>
            </div>

            <!-- Products Tab -->
            <div class="admin-tab-content" id="tab-products">
                <div style="text-align: center; padding: 3rem; color: var(--admin-text-secondary);">
                    <i data-lucide="package" style="width: 48px; height: 48px; margin-bottom: 1rem; opacity: 0.5;"></i>
                    <p>Thống kê sản phẩm sẽ hiển thị tại đây</p>
                </div>
            </div>

            <!-- Marketing Tab -->
            <div class="admin-tab-content" id="tab-marketing">
                <div style="text-align: center; padding: 3rem; color: var(--admin-text-secondary);">
                    <i data-lucide="megaphone" style="width: 48px; height: 48px; margin-bottom: 1rem; opacity: 0.5;"></i>
                    <p>Thống kê marketing sẽ hiển thị tại đây</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    
    <script>
        // Initialize Lucide icons
        lucide.createIcons();
        
        // Prepare chart data from Model
        var revenueData = @Html.Raw(Json.Serialize(Model.SalesAnalytics.MonthlyData.Select(m => new { 
            label = m.Month, 
            value = m.Revenue 
        })));
        
        // Revenue Chart
        const revenueCtx = document.getElementById('revenueChart').getContext('2d');
        new Chart(revenueCtx, {
            type: 'line',
            data: {
                labels: revenueData.map(d => d.label),
                datasets: [{
                    label: 'Doanh thu (₫)',
                    data: revenueData.map(d => d.value),
                    borderColor: '#DC3545',
                    backgroundColor: 'rgba(220, 53, 69, 0.1)',
                    tension: 0.4,
                    fill: true,
                    borderWidth: 2,
                    pointRadius: 4,
                    pointHoverRadius: 6,
                    pointBackgroundColor: '#DC3545',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        padding: 12,
                        titleFont: { size: 13, weight: 'bold' },
                        bodyFont: { size: 13 },
                        callbacks: {
                            label: function(context) {
                                return 'Doanh thu: ' + new Intl.NumberFormat('vi-VN', { 
                                    style: 'currency', 
                                    currency: 'VND' 
                                }).format(context.parsed.y);
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        },
                        ticks: {
                            font: { size: 11 },
                            callback: function(value) {
                                return new Intl.NumberFormat('vi-VN', { 
                                    notation: 'compact',
                                    compactDisplay: 'short'
                                }).format(value) + ' ₫';
                            }
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        },
                        ticks: {
                            font: { size: 11 }
                        }
                    }
                }
            }
        });

        // Tab switching with improved styling
        document.querySelectorAll('.admin-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                const tabName = this.dataset.tab;
                
                // Update active tab with border highlight
                document.querySelectorAll('.admin-tab').forEach(t => {
                    t.classList.remove('active');
                    t.style.borderBottom = '2px solid transparent';
                    t.style.color = 'var(--admin-text-secondary)';
                });
                this.classList.add('active');
                this.style.borderBottom = '2px solid #DC3545';
                this.style.color = '#DC3545';
                
                // Update active content
                document.querySelectorAll('.admin-tab-content').forEach(content => content.classList.remove('active'));
                document.getElementById('tab-' + tabName).classList.add('active');
                
                // Reinitialize icons
                lucide.createIcons();
            });
        });

        // Set initial active tab style
        const activeTab = document.querySelector('.admin-tab.active');
        if (activeTab) {
            activeTab.style.borderBottom = '2px solid #DC3545';
            activeTab.style.color = '#DC3545';
        }

        // Date range change
        document.getElementById('dateRangeSelect')?.addEventListener('change', function() {
            console.log('Date range changed to:', this.value);
            // TODO: Reload data with new date range
        });

        function exportReport(format) {
            console.log('Exporting report as:', format);
            alert('Chức năng xuất báo cáo ' + format.toUpperCase() + ' sẽ được phát triển sau.');
        }

        function scheduleReport() {
            console.log('Scheduling report');
            alert('Chức năng lập lịch báo cáo sẽ được phát triển sau.');
        }
    </script>
}
