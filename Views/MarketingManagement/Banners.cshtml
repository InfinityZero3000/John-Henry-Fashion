@model List<JohnHenryFashionWeb.Models.MarketingBanner>
@{
    ViewData["Title"] = "Quản lý Banner Marketing";
    ViewData["CurrentSection"] = "MarketingManagement";
    ViewData["Breadcrumb"] = new List<(string Text, string Url)>
    {
        ("Marketing", "/admin/marketing"),
        ("Quản lý Banner", "")
    };
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .banner-image {
        max-width: 200px;
        max-height: 100px;
        object-fit: cover;
        border-radius: 8px;
    }
</style>

<div class="admin-content">
    <div class="admin-page-header">
        <div class="admin-page-header-content">
            <div>
                <h1>Quản lý Banner Marketing</h1>
            </div>
            <a href="/admin/marketing/banner/create" class="admin-btn admin-btn-primary">
                <i data-lucide="plus"></i>
                Tạo Banner Mới
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="admin-alert admin-alert-success" style="margin-bottom: 1.5rem;">
            <i data-lucide="check-circle"></i>
            <span>@TempData["SuccessMessage"]</span>
        </div>
    }

    <!-- Banners List -->
    @if (Model == null || !Model.Any())
    {
        <div class="admin-card" style="padding: 4rem 2rem; text-align: center;">
            <i data-lucide="image" style="width: 48px; height: 48px; margin: 0 auto 1rem; color: #d1d5db;"></i>
            <p style="color: #9ca3af; margin: 0;">Chưa có banner nào. Hãy tạo banner đầu tiên!</p>
        </div>
    }
    else
    {
        @foreach (var banner in Model)
        {
            <div class="admin-card" style="margin-bottom: 1.5rem;">
                <div style="display: grid; grid-template-columns: 200px 1fr auto; gap: 1.5rem; align-items: center;">
                    <div>
                        @if (!string.IsNullOrEmpty(banner.ImageUrl))
                        {
                            <img src="@banner.ImageUrl" alt="@banner.Title" class="banner-image" />
                        }
                        else
                        {
                            <div class="banner-image" style="background-color: #e5e7eb; display: flex; align-items: center; justify-content: center;">
                                <i data-lucide="image" style="width: 32px; height: 32px; color: #9ca3af;"></i>
                            </div>
                        }
                    </div>
                    <div>
                        <h3 style="margin-bottom: 0.5rem;">@banner.Title</h3>
                        <p style="color: #6b7280; margin-bottom: 1rem;">@banner.Description</p>
                        <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                            <span class="admin-badge" style="background-color: #dbeafe; color: #1e40af;">@banner.Position</span>
                            <span class="admin-badge" style="background-color: #e5e7eb; color: #374151;">Vị trí: @banner.SortOrder</span>
                            @if (banner.EndDate.HasValue)
                            {
                                <span class="admin-badge" style="background-color: #fef3c7; color: #92400e;">
                                    @banner.StartDate.ToString("dd/MM/yyyy") - @banner.EndDate.Value.ToString("dd/MM/yyyy")
                                </span>
                            }
                        </div>
                    </div>
                    <div style="text-align: right;">
                        <div style="margin-bottom: 1rem;">
                            @if (banner.IsActive)
                            {
                                <span class="admin-badge" style="background-color: #d1fae5; color: #065f46;">
                                    <i data-lucide="check-circle" style="width: 14px; height: 14px;"></i>
                                    Đang hoạt động
                                </span>
                            }
                            else
                            {
                                <span class="admin-badge" style="background-color: #fee2e2; color: #991b1b;">
                                    <i data-lucide="x-circle" style="width: 14px; height: 14px;"></i>
                                    Tạm ngưng
                                </span>
                            }
                        </div>
                        <div style="display: flex; gap: 0.5rem; justify-content: flex-end;">
                            <a href="/admin/marketing/banner/@banner.Id" class="admin-btn admin-btn-sm admin-btn-primary">
                                <i data-lucide="edit"></i>
                                Sửa
                            </a>
                            <form method="post" action="/admin/marketing/banner/@banner.Id/delete" style="display:inline;" onsubmit="return confirm('Bạn có chắc muốn xóa banner này?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="admin-btn admin-btn-sm admin-btn-danger">
                                    <i data-lucide="trash-2"></i>
                                    Xóa
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
