@model JohnHenryFashionWeb.Models.MarketingBanner
@{
    ViewData["Title"] = "Tạo Banner Mới";
    ViewData["CurrentSection"] = "MarketingManagement";
    ViewData["Breadcrumb"] = new List<(string Text, string Url)>
    {
        ("Marketing", "/admin/marketing"),
        ("Quản lý Banner", "/admin/marketing/banners"),
        ("Tạo Banner Mới", "")
    };
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-content">
    <div class="admin-page-header">
        <div class="admin-page-header-content">
            <div>
                <h1>Tạo Banner Mới</h1>
                <p>Thêm banner marketing mới cho website</p>
            </div>
        </div>
    </div>

    <div class="admin-card" style="max-width: 800px; margin: 1.5rem auto 0;"">

        <form method="post" action="/admin/marketing/banner/create">
            @Html.AntiForgeryToken()
            
            <div class="admin-form-group">
                <label for="Title" class="admin-form-label">Tiêu đề *</label>
                <input type="text" class="admin-form-control" id="Title" name="Title" required />
            </div>

            <div class="admin-form-group">
                <label for="Description" class="admin-form-label">Mô tả</label>
                <textarea class="admin-form-control" id="Description" name="Description" rows="3"></textarea>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                <div class="admin-form-group">
                    <label for="ImageUrl" class="admin-form-label">URL Hình ảnh Desktop *</label>
                    <input type="url" class="admin-form-control" id="ImageUrl" name="ImageUrl" required />
                </div>
                <div class="admin-form-group">
                    <label for="MobileImageUrl" class="admin-form-label">URL Hình ảnh Mobile</label>
                    <input type="url" class="admin-form-control" id="MobileImageUrl" name="MobileImageUrl" />
                </div>
            </div>

            <div class="admin-form-group">
                <label for="LinkUrl" class="admin-form-label">URL Liên kết</label>
                <input type="url" class="admin-form-control" id="LinkUrl" name="LinkUrl" />
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                <div class="admin-form-group">
                    <label for="Position" class="admin-form-label">Vị trí *</label>
                    <select class="admin-form-control" id="Position" name="Position" required>
                        <option value="Homepage Hero">Homepage Hero</option>
                        <option value="Homepage Middle">Homepage Middle</option>
                        <option value="Homepage Bottom">Homepage Bottom</option>
                        <option value="Category Top">Category Top</option>
                        <option value="Product Page">Product Page</option>
                        <option value="Sidebar">Sidebar</option>
                    </select>
                </div>
                <div class="admin-form-group">
                    <label for="TargetPage" class="admin-form-label">Trang đích</label>
                    <input type="text" class="admin-form-control" id="TargetPage" name="TargetPage" placeholder="/" />
                </div>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 1rem;">
                <div class="admin-form-group">
                    <label for="SortOrder" class="admin-form-label">Thứ tự hiển thị</label>
                    <input type="number" class="admin-form-control" id="SortOrder" name="SortOrder" value="0" />
                </div>
                <div class="admin-form-group">
                    <label for="StartDate" class="admin-form-label">Ngày bắt đầu</label>
                    <input type="datetime-local" class="admin-form-control" id="StartDate" name="StartDate" />
                </div>
                <div class="admin-form-group">
                    <label for="EndDate" class="admin-form-label">Ngày kết thúc</label>
                    <input type="datetime-local" class="admin-form-control" id="EndDate" name="EndDate" />
                </div>
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
                    <input type="checkbox" id="OpenInNewTab" name="OpenInNewTab" value="true" style="width: 18px; height: 18px;" />
                    <span>Mở link trong tab mới</span>
                </label>
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
                    <input type="checkbox" id="IsActive" name="IsActive" value="true" checked style="width: 18px; height: 18px;" />
                    <span>Kích hoạt ngay</span>
                </label>
            </div>

            <div style="display: flex; gap: 0.75rem;">
                <button type="submit" class="admin-btn admin-btn-primary">
                    <i data-lucide="save"></i>
                    Lưu Banner
                </button>
                <a href="/admin/marketing/banners" class="admin-btn admin-btn-secondary">
                    <i data-lucide="x"></i>
                    Hủy
                </a>
            </div>
        </form>
    </div>
</div>
