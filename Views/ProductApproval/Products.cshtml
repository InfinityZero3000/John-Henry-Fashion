@model IEnumerable<JohnHenryFashionWeb.Models.Product>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
    ViewData["CurrentSection"] = "Approvals";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Breadcrumb"] = "<li class=\"breadcrumb-item\"><a href=\"/admin/approvals\">Quản lý phê duyệt</a></li><li class=\"breadcrumb-item active\">Sản phẩm</li>";
    
    var totalProducts = ViewBag.TotalProducts ?? 0;
    var activeProducts = ViewBag.ActiveProducts ?? 0;
    var inactiveProducts = ViewBag.InactiveProducts ?? 0;
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var status = ViewBag.Status as string;
}

<style>
    .product-image {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 8px;
    }

    .status-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-size: 0.8125rem;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
    }

    .status-active {
        background: #dcfce7;
        color: #166534;
    }

    .status-inactive {
        background: #fee2e2;
        color: #991b1b;
    }

    .status-out-of-stock {
        background: #f3f4f6;
        color: #4b5563;
    }

    .admin-table tbody tr:hover {
        background-color: #f9fafb;
    }
</style>

<div class="admin-content">
    <!-- Page Header -->
    <div class="admin-page-header">
        <div class="admin-flex-between">
            <div>
                <h1 class="admin-page-title">
                    <i data-lucide="package"></i>
                    Quản lý sản phẩm
                </h1>
            </div>
            <a href="/admin/approvals" class="admin-btn admin-btn-secondary">
                <i data-lucide="arrow-left"></i>
                Quay lại
            </a>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="admin-alert admin-alert-success">
            <i data-lucide="check-circle"></i>
            <span>@TempData["SuccessMessage"]</span>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="admin-stats-grid">
        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Tổng sản phẩm</h3>
                    <p class="value">@totalProducts</p>
                    <p class="change">Tất cả sản phẩm</p>
                </div>
                <div class="admin-stat-card-icon primary">
                    <i data-lucide="package"></i>
                </div>
            </div>
        </div>

        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Đang hoạt động</h3>
                    <p class="value">@activeProducts</p>
                    <p class="change">@((totalProducts > 0 ? (activeProducts * 100.0 / totalProducts).ToString("F1") : "0"))% tổng số</p>
                </div>
                <div class="admin-stat-card-icon success">
                    <i data-lucide="check-circle"></i>
                </div>
            </div>
        </div>

        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Không hoạt động</h3>
                    <p class="value">@inactiveProducts</p>
                    <p class="change">@((totalProducts > 0 ? (inactiveProducts * 100.0 / totalProducts).ToString("F1") : "0"))% tổng số</p>
                </div>
                <div class="admin-stat-card-icon danger">
                    <i data-lucide="x-circle"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="admin-card admin-mb-lg">
        <div class="admin-card-header">
            <h3>Lọc sản phẩm</h3>
        </div>
        <div class="admin-card-body">
            <form method="get" class="admin-flex admin-gap-sm" style="flex-wrap: wrap;">
                <div class="admin-form-group" style="margin: 0; flex: 1; min-width: 200px;">
                    <select name="status" class="admin-form-control">
                        <option value="">Tất cả trạng thái</option>
                        <option value="active" selected="@(status == "active")">Đang hoạt động</option>
                        <option value="inactive" selected="@(status == "inactive")">Không hoạt động</option>
                        <option value="out_of_stock" selected="@(status == "out_of_stock")">Hết hàng</option>
                    </select>
                </div>
                <button type="submit" class="admin-btn admin-btn-primary">
                    <i data-lucide="filter"></i>
                    Lọc
                </button>
                @if (!string.IsNullOrEmpty(status))
                {
                    <a href="/admin/approvals/products" class="admin-btn admin-btn-secondary">
                        <i data-lucide="x"></i>
                        Xóa lọc
                    </a>
                }
            </form>
        </div>
    </div>

    <!-- Products List -->
    <div class="admin-card">
        <div class="admin-card-header admin-flex-between">
            <h3>Danh sách sản phẩm</h3>
            @if (Model != null && Model.Any())
            {
                <span class="admin-badge admin-badge-primary">@Model.Count() sản phẩm</span>
            }
        </div>
        <div class="admin-card-body" style="padding: 0;">
            @if (Model != null && Model.Any())
            {
                <div class="admin-table-container">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th style="width: 80px;">Ảnh</th>
                                <th>Tên sản phẩm</th>
                                <th style="width: 150px;">Danh mục</th>
                                <th style="width: 120px;">Giá</th>
                                <th style="width: 80px;">Tồn kho</th>
                                <th style="width: 140px;">Trạng thái</th>
                                <th style="width: 80px;">Lượt xem</th>
                                <th style="width: 220px;">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>
                                        @if (product.GalleryImages != null && product.GalleryImages.Any())
                                        {
                                            <img src="@product.GalleryImages.First()" alt="@product.Name" class="product-image">
                                        }
                                        else if (!string.IsNullOrEmpty(product.FeaturedImageUrl))
                                        {
                                            <img src="@product.FeaturedImageUrl" alt="@product.Name" class="product-image">
                                        }
                                        else
                                        {
                                            <div class="product-image" style="background: #f3f4f6; display: flex; align-items: center; justify-content: center;">
                                                <i data-lucide="image" style="width: 24px; height: 24px; color: #9ca3af;"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <div style="font-weight: 500; color: #1f2937;">@product.Name</div>
                                        <small style="color: #6b7280;">SKU: @product.SKU</small>
                                    </td>
                                    <td>
                                        <span style="color: #4b5563;">@(product.Category?.Name ?? "N/A")</span>
                                    </td>
                                    <td>
                                        <span style="color: #1f2937; font-weight: 500;">@product.Price.ToString("N0") ₫</span>
                                    </td>
                                    <td>
                                        <span style="color: #4b5563;">@product.StockQuantity</span>
                                    </td>
                                    <td>
                                        @switch (product.Status)
                                        {
                                            case "active":
                                                <span class="status-badge status-active">
                                                    <i data-lucide="check-circle" style="width: 14px; height: 14px;"></i>
                                                    Hoạt động
                                                </span>
                                                break;
                                            case "inactive":
                                                <span class="status-badge status-inactive">
                                                    <i data-lucide="x-circle" style="width: 14px; height: 14px;"></i>
                                                    Không hoạt động
                                                </span>
                                                break;
                                            case "out_of_stock":
                                                <span class="status-badge status-out-of-stock">
                                                    <i data-lucide="package-x" style="width: 14px; height: 14px;"></i>
                                                    Hết hàng
                                                </span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <span style="color: #4b5563;">@product.ViewCount</span>
                                    </td>
                                    <td class="actions">
                                        <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                                            <a href="/admin/approvals/products/@product.Id" class="admin-btn admin-btn-sm admin-btn-primary" title="Xem chi tiết">
                                                <i data-lucide="eye"></i>
                                            </a>
                                            <a href="/admin/products/edit/@product.Id" class="admin-btn admin-btn-sm admin-btn-secondary" title="Chỉnh sửa">
                                                <i data-lucide="edit"></i>
                                            </a>
                                            @if (product.Status != "active" && product.IsActive == false)
                                            {
                                                <form method="post" action="/admin/approvals/products/@product.Id/activate" style="display: inline; margin: 0;">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="admin-btn admin-btn-sm admin-btn-success" title="Kích hoạt">
                                                        <i data-lucide="check"></i>
                                                    </button>
                                                </form>
                                            }
                                            @if (product.Status == "active" && product.IsActive == true)
                                            {
                                                <button type="button" class="admin-btn admin-btn-sm admin-btn-danger" onclick="showDeactivateModal(@product.Id, '@product.Name')" title="Vô hiệu hóa">
                                                    <i data-lucide="ban"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (totalPages > 1)
                {
                    <div class="admin-pagination">
                        <div class="admin-pagination-info">
                            Trang @currentPage / @totalPages
                        </div>
                        <div class="admin-pagination-controls">
                            @if (currentPage > 1)
                            {
                                <a href="?page=@(currentPage - 1)@(string.IsNullOrEmpty(status) ? "" : "&status=" + status)" class="admin-btn admin-btn-sm admin-btn-secondary">
                                    <i data-lucide="chevron-left"></i>
                                    Trước
                                </a>
                            }
                            else
                            {
                                <button class="admin-btn admin-btn-sm admin-btn-secondary" disabled>
                                    <i data-lucide="chevron-left"></i>
                                    Trước
                                </button>
                            }

                            <div class="admin-pagination-numbers">
                                @{
                                    var startPage = Math.Max(1, currentPage - 2);
                                    var endPage = Math.Min(totalPages, currentPage + 2);
                                    
                                    if (startPage > 1)
                                    {
                                        <a href="?page=1@(string.IsNullOrEmpty(status) ? "" : "&status=" + status)" class="admin-pagination-number">1</a>
                                        if (startPage > 2)
                                        {
                                            <span class="admin-pagination-ellipsis">...</span>
                                        }
                                    }
                                    
                                    for (int i = startPage; i <= endPage; i++)
                                    {
                                        if (i == currentPage)
                                        {
                                            <span class="admin-pagination-number active">@i</span>
                                        }
                                        else
                                        {
                                            <a href="?page=@i@(string.IsNullOrEmpty(status) ? "" : "&status=" + status)" class="admin-pagination-number">@i</a>
                                        }
                                    }
                                    
                                    if (endPage < totalPages)
                                    {
                                        if (endPage < totalPages - 1)
                                        {
                                            <span class="admin-pagination-ellipsis">...</span>
                                        }
                                        <a href="?page=@totalPages@(string.IsNullOrEmpty(status) ? "" : "&status=" + status)" class="admin-pagination-number">@totalPages</a>
                                    }
                                }
                            </div>

                            @if (currentPage < totalPages)
                            {
                                <a href="?page=@(currentPage + 1)@(string.IsNullOrEmpty(status) ? "" : "&status=" + status)" class="admin-btn admin-btn-sm admin-btn-secondary">
                                    Sau
                                    <i data-lucide="chevron-right"></i>
                                </a>
                            }
                            else
                            {
                                <button class="admin-btn admin-btn-sm admin-btn-secondary" disabled>
                                    Sau
                                    <i data-lucide="chevron-right"></i>
                                </button>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div style="padding: 4rem 2rem; text-align: center; color: #9ca3af;">
                    <i data-lucide="package-x" style="width: 48px; height: 48px; margin: 0 auto 1rem; color: #d1d5db;"></i>
                    <p style="font-size: 1rem; margin: 0;">Không tìm thấy sản phẩm nào</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Deactivate Modal -->
<div class="admin-modal" id="deactivateModal" style="display: none;">
    <div class="admin-modal-backdrop" onclick="closeDeactivateModal()"></div>
    <div class="admin-modal-content" style="max-width: 500px;">
        <div class="admin-modal-header">
            <h3>Vô hiệu hóa sản phẩm</h3>
            <button type="button" class="admin-modal-close" onclick="closeDeactivateModal()">
                <i data-lucide="x"></i>
            </button>
        </div>
        <form id="deactivateForm" method="post">
            @Html.AntiForgeryToken()
            <div class="admin-modal-body">
                <div class="admin-alert admin-alert-warning" style="margin-bottom: 1.25rem;">
                    <i data-lucide="alert-triangle"></i>
                    <span>Bạn có chắc chắn muốn vô hiệu hóa sản phẩm <strong id="productName"></strong>?</span>
                </div>
                <div class="admin-form-group">
                    <label class="admin-form-label">Lý do (Tùy chọn)</label>
                    <textarea name="reason" class="admin-form-control" rows="3" placeholder="Nhập lý do vô hiệu hóa sản phẩm này..."></textarea>
                    <small style="color: #6b7280; display: block; margin-top: 0.375rem;">Lý do này sẽ được ghi lại cho mục đích quản trị.</small>
                </div>
            </div>
            <div class="admin-modal-footer">
                <button type="button" class="admin-btn admin-btn-secondary" onclick="closeDeactivateModal()">
                    <i data-lucide="x"></i>
                    Hủy
                </button>
                <button type="submit" class="admin-btn admin-btn-danger">
                    <i data-lucide="ban"></i>
                    Vô hiệu hóa sản phẩm
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function showDeactivateModal(productId, productName) {
            document.getElementById('productName').textContent = productName;
            document.getElementById('deactivateForm').action = `/admin/approvals/products/${productId}/deactivate`;
            document.getElementById('deactivateModal').style.display = 'flex';
            document.body.style.overflow = 'hidden';
            
            // Initialize Lucide icons in modal
            setTimeout(() => {
                if (typeof lucide !== 'undefined') {
                    lucide.createIcons();
                }
            }, 10);
        }

        function closeDeactivateModal() {
            document.getElementById('deactivateModal').style.display = 'none';
            document.body.style.overflow = '';
        }

        // Close modal on ESC key
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeDeactivateModal();
            }
        });
    </script>
}
