@model JohnHenryFashionWeb.Models.ProductReview
@{
    ViewData["Title"] = "Review Details";
    Layout = "_AdminLayout";
    ViewData["CurrentSection"] = "ProductApproval";
    ViewData["Breadcrumb"] = new List<(string Text, string Url)>
    {
        ("Product Approval", "/admin/approvals"),
        ("Reviews", "/admin/approvals/reviews"),
        ("Review Details", "")
    };
    var userReviews = ViewBag.UserReviews as List<JohnHenryFashionWeb.Models.ProductReview> ?? new List<JohnHenryFashionWeb.Models.ProductReview>();
}

<style>
    .product-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
    }

    .rating-stars {
        color: #f59e0b;
        font-size: 1.5rem;
    }

    .review-timeline-item {
        padding: 1rem;
        border-left: 3px solid #e5e7eb;
        margin-left: 1rem;
        position: relative;
    }

    .review-timeline-item::before {
        content: '';
        position: absolute;
        left: -8px;
        top: 1.25rem;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: #6366f1;
    }
</style>

<div class="admin-page-header">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <div>
            <a href="/admin/approvals/reviews" class="admin-link" style="text-decoration: none; margin-bottom: 0.5rem; display: inline-block;">
                <i data-lucide="arrow-left" style="width: 16px; height: 16px;"></i>
                Back to Reviews
            </a>
            <h1 class="admin-page-title">Review Details</h1>
            <p style="color: #6b7280; margin: 0;">Review #@Model.Id</p>
        </div>
    </div>
</div>

<div style="display: grid; grid-template-columns: 1fr 350px; gap: 1.5rem;">
    <!-- Left Column: Review Details -->
    <div>
        <!-- Product & Review Info -->
        <div class="admin-card" style="margin-bottom: 1.5rem;">
            <div style="display: grid; grid-template-columns: 200px 1fr; gap: 1.5rem;">
                <div>
                    @if (Model.Product?.GalleryImages != null && Model.Product.GalleryImages.Any())
                    {
                        <img src="@Model.Product.GalleryImages.First()" alt="@Model.Product.Name" class="product-image">
                    }
                    else if (!string.IsNullOrEmpty(Model.Product?.FeaturedImageUrl))
                    {
                        <img src="@Model.Product.FeaturedImageUrl" alt="@Model.Product.Name" class="product-image">
                    }
                    else
                    {
                        <div class="product-image bg-secondary d-flex align-items-center justify-content-center">
                            <i data-lucide="image" style="width: 40px; height: 40px; color: #9ca3af;"></i>
                        </div>
                    }
                </div>
                <div>
                    <h4 style="margin-bottom: 0.5rem; color: #1f2937;">@Model.Product?.Name</h4>
                    <p style="color: #6b7280; margin-bottom: 1rem; display: flex; align-items: center; gap: 0.75rem;">
                        <span style="display: inline-flex; align-items: center; gap: 0.25rem;">
                            <i data-lucide="tag" style="width: 14px; height: 14px;"></i>
                            @Model.Product?.Category?.Name
                        </span>
                        <span>â€¢</span>
                        <span style="display: inline-flex; align-items: center; gap: 0.25rem;">
                            <i data-lucide="dollar-sign" style="width: 14px; height: 14px;"></i>
                            @Model.Product?.Price.ToString("N0")
                        </span>
                    </p>
                    
                    <div style="margin-bottom: 1rem;">
                        <div class="rating-stars" style="margin-bottom: 0.5rem;">
                            @for (int i = 0; i < Model.Rating; i++)
                            {
                                <i data-lucide="star" style="width: 20px; height: 20px; fill: currentColor;"></i>
                            }
                            @for (int i = Model.Rating; i < 5; i++)
                            {
                                <i data-lucide="star" style="width: 20px; height: 20px;"></i>
                            }
                        </div>
                        <span style="color: #1f2937;">@Model.Rating out of 5 stars</span>
                    </div>

                    <div style="margin-bottom: 1rem;">
                        @if (Model.IsApproved)
                        {
                            <span class="admin-badge admin-badge-success">
                                <i data-lucide="check-circle" style="width: 14px; height: 14px;"></i>
                                Approved
                            </span>
                        }
                        else
                        {
                            <span class="admin-badge admin-badge-warning">
                                <i data-lucide="clock" style="width: 14px; height: 14px;"></i>
                                Pending Approval
                            </span>
                        }
                    </div>

                    <p style="color: #6b7280; margin: 0; display: flex; align-items: center; gap: 0.25rem;">
                        <i data-lucide="calendar" style="width: 14px; height: 14px;"></i>
                        Submitted: @Model.CreatedAt.ToString("MMMM dd, yyyy 'at' HH:mm")
                    </p>
                    @if (Model.UpdatedAt != Model.CreatedAt)
                    {
                        <p style="color: #6b7280; margin: 0; display: flex; align-items: center; gap: 0.25rem;">
                            <i data-lucide="edit" style="width: 14px; height: 14px;"></i>
                            Updated: @Model.UpdatedAt.ToString("MMMM dd, yyyy 'at' HH:mm")
                        </p>
                    }
                </div>
            </div>
        </div>

        <!-- Review Content -->
        <div class="admin-card" style="margin-bottom: 1.5rem;">
            <h5 style="margin-bottom: 1rem; font-weight: 600; display: flex; align-items: center; gap: 0.5rem;">
                <i data-lucide="message-circle" style="width: 18px; height: 18px;"></i>
                Review Content
            </h5>
            
            @if (!string.IsNullOrEmpty(Model.Title))
            {
                <h6 style="color: #1f2937; margin-bottom: 1rem;">@Model.Title</h6>
            }
            
            <p style="color: #6b7280; margin: 0; line-height: 1.8;">
                @Model.Comment
            </p>
        </div>

        <!-- Actions -->
        @if (!Model.IsApproved)
        {
            <div class="admin-card">
                <h5 style="margin-bottom: 1rem; font-weight: 600; display: flex; align-items: center; gap: 0.5rem;">
                    <i data-lucide="sliders" style="width: 18px; height: 18px;"></i>
                    Actions
                </h5>
                
                <div style="display: flex; gap: 0.75rem;">
                    <form method="post" action="/admin/approvals/reviews/@Model.Id/approve" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="admin-btn admin-btn-success">
                            <i data-lucide="check" style="width: 16px; height: 16px;"></i>
                            Approve Review
                        </button>
                    </form>
                    
                    <button type="button" class="admin-btn admin-btn-danger" onclick="openRejectModal()">
                        <i data-lucide="x" style="width: 16px; height: 16px;"></i>
                        Reject Review
                    </button>
                </div>
            </div>
        }
    </div>

    <!-- Right Column: User Info & History -->
    <div>
        <!-- User Information -->
        <div class="admin-card" style="margin-bottom: 1.5rem;">
            <h5 style="margin-bottom: 1rem; font-weight: 600; display: flex; align-items: center; gap: 0.5rem;">
                <i data-lucide="user" style="width: 18px; height: 18px;"></i>
                Reviewer Information
            </h5>
            
            <div style="margin-bottom: 1rem;">
                <p style="color: #6b7280; margin-bottom: 0.25rem; font-size: 0.875rem;">Username</p>
                <p style="color: #1f2937; margin: 0;">@Model.User?.UserName</p>
            </div>
            
            <div style="margin-bottom: 1rem;">
                <p style="color: #6b7280; margin-bottom: 0.25rem; font-size: 0.875rem;">Email</p>
                <p style="color: #1f2937; margin: 0;">@Model.User?.Email</p>
            </div>
            
            @if (Model.User?.PhoneNumber != null)
            {
                <div style="margin-bottom: 1rem;">
                    <p style="color: #6b7280; margin-bottom: 0.25rem; font-size: 0.875rem;">Phone</p>
                    <p style="color: #1f2937; margin: 0;">@Model.User.PhoneNumber</p>
                </div>
            }
            
            <div style="margin: 0;">
                <p style="color: #6b7280; margin-bottom: 0.25rem; font-size: 0.875rem;">Member Since</p>
                <p style="color: #1f2937; margin: 0;">@Model.User?.CreatedAt.ToString("MMMM yyyy")</p>
            </div>
        </div>

        <!-- Review History -->
        <div class="admin-card">
            <h5 style="margin-bottom: 1rem; font-weight: 600; display: flex; align-items: center; gap: 0.5rem;">
                <i data-lucide="history" style="width: 18px; height: 18px;"></i>
                User's Review History
            </h5>
            
            @if (userReviews.Any())
            {
                <div style="margin-bottom: 1rem;">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                        <span style="color: #6b7280;">Total Reviews</span>
                        <span style="color: #1f2937; font-weight: 600;">@userReviews.Count</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                        <span style="color: #6b7280;">Approved</span>
                        <span style="color: #059669; font-weight: 600;">@userReviews.Count(r => r.IsApproved)</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                        <span style="color: #6b7280;">Pending</span>
                        <span style="color: #f59e0b; font-weight: 600;">@userReviews.Count(r => !r.IsApproved)</span>
                    </div>
                    <div style="display: flex; justify-content: space-between;">
                        <span style="color: #6b7280;">Average Rating</span>
                        <span style="color: #1f2937; font-weight: 600;">@userReviews.Average(r => r.Rating).ToString("0.0")</span>
                    </div>
                </div>

                <div style="border-top: 1px solid rgba(0, 0, 0, 0.05); margin: 1rem 0;"></div>

                <h6 style="color: #1f2937; margin-bottom: 1rem; font-weight: 600;">Recent Reviews</h6>
                <div style="max-height: 400px; overflow-y: auto;">
                    @foreach (var review in userReviews.OrderByDescending(r => r.CreatedAt).Take(5))
                    {
                        <div class="review-timeline-item" style="margin-bottom: 1rem;">
                            <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 0.5rem;">
                                <span style="color: #1f2937; font-weight: 600;">@review.Product?.Name</span>
                                @if (review.IsApproved)
                                {
                                    <i data-lucide="check-circle" style="width: 16px; height: 16px; color: #059669;"></i>
                                }
                                else
                                {
                                    <i data-lucide="clock" style="width: 16px; height: 16px; color: #f59e0b;"></i>
                                }
                            </div>
                            <div style="margin-bottom: 0.5rem;">
                                <small style="color: #f59e0b;">
                                    @for (int i = 0; i < review.Rating; i++)
                                    {
                                        <i data-lucide="star" style="width: 14px; height: 14px; fill: currentColor;"></i>
                                    }
                                </small>
                            </div>
                            <p style="color: #6b7280; font-size: 0.875rem; margin-bottom: 0.5rem; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                @review.Comment
                            </p>
                            <small style="color: #9ca3af;">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                        </div>
                    }
                </div>
            }
            else
            {
                <div style="text-align: center; padding: 2rem 0;">
                    <i data-lucide="inbox" style="width: 48px; height: 48px; color: #9ca3af; margin-bottom: 0.5rem;"></i>
                    <p style="color: #6b7280; margin: 0;">No review history</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="admin-modal" id="rejectModal" style="display: none;">
    <div class="admin-modal-content">
        <div class="admin-modal-header">
            <h3 class="admin-modal-title">Reject Review</h3>
            <button type="button" class="admin-modal-close" onclick="closeRejectModal()">
                <i data-lucide="x" style="width: 20px; height: 20px;"></i>
            </button>
        </div>
        <form method="post" action="/admin/approvals/reviews/@Model.Id/reject">
            @Html.AntiForgeryToken()
            <div class="admin-modal-body">
                <div class="admin-alert admin-alert-danger" style="margin-bottom: 1rem;">
                    <i data-lucide="alert-circle" style="width: 16px; height: 16px;"></i>
                    <span>Are you sure you want to reject this review?</span>
                </div>
                <div class="admin-form-group">
                    <label class="admin-form-label">Rejection Reason (Optional)</label>
                    <textarea name="reason" class="admin-form-control" rows="3" placeholder="Enter reason for rejecting this review..."></textarea>
                    <small style="color: #6b7280; font-size: 0.875rem;">This reason will be logged for administrative purposes.</small>
                </div>
            </div>
            <div class="admin-modal-footer">
                <button type="button" class="admin-btn admin-btn-secondary" onclick="closeRejectModal()">Cancel</button>
                <button type="submit" class="admin-btn admin-btn-danger">
                    <i data-lucide="x" style="width: 16px; height: 16px;"></i>
                    Reject Review
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function openRejectModal() {
            document.getElementById('rejectModal').style.display = 'flex';
            setTimeout(() => { lucide.createIcons(); }, 10);
        }

        function closeRejectModal() {
            document.getElementById('rejectModal').style.display = 'none';
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const rejectModal = document.getElementById('rejectModal');
            if (event.target === rejectModal) {
                closeRejectModal();
            }
        }

        // Initialize lucide icons
        document.addEventListener('DOMContentLoaded', function() {
            lucide.createIcons();
        });
    </script>
}
