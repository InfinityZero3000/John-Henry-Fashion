                    console.log('Modal display:', window.getComputedStyle(this).display);
                    console.log('Modal z-index:', window.getComputedStyle(this).zIndex);
                });
                
                sizeGuideModal.addEventListener('shown.bs.modal', function() {
                    console.log('‚úÖ Modal is fully shown');
                    console.log('Modal classes:', this.className);
                    console.log('Modal position:', this.getBoundingClientRect());
                    
                    // Check if image loaded
                    const img = this.querySelector('img');
